<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 应用程序</title>
    @Styles.Render("~/Content/css4")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap4")
    @using Models
    @{ 
        Personnel ps = Session["yg"] as Personnel;
    }
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    
    <style>
        #card-img {
            border-radius: 50%;
            width: 30%;
            height: 30%;
            margin: 0px auto;
            margin-top: 2em
        }

        #nav {
            width: 100%;
        }

            #nav li {
                background-color: #333232;
                margin: 1px 0px;
            }

                #nav li a {
                    color: white;
                }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">晨新工资管理系统</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">首页</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        下拉框
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">第一项</a>
                        <a class="dropdown-item" href="#">第二项</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">第三项</a>
                    </div>
                </li>

            </ul>
            <label>欢迎进入到系统！</label>
            <a class="btn btn-danger" href="#">退出</a>
        </div>
    </nav>
    <div class="row">
        <div class="col-2 bg-dark" style="padding-right:0px;">
            <div class="card bg-transparent border-0">
                <img src="~/Content/Images/1.jpg" class="card-img-top" id="card-img">
                <div class="card-body text-white">
                    <h5 class="card-title text-center">..</h5>
                    <p class="card-text" style="font-size:12px;">
                        <svg class="bi bi-tag-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor">
                            <path fill-rule="evenodd" d="M2 1a1 1 0 0 0-1 1v4.586a1 1 0 0 0 .293.707l7 7a1 1 0 0 0 1.414 0l4.586-4.586a1 1 0 0 0 0-1.414l-7-7A1 1 0 0 0 6.586 1H2zm4 3.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                        </svg>
                        ...
                    </p>
                    <p class="card-text" style="font-size:12px;">
                        <svg class="bi bi-phone" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor">
                            <path fill-rule="evenodd" d="M11 1H5a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM5 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H5z" />
                            <path fill-rule="evenodd" d="M8 14a1 1 0 1 0 0-2 1 1 0 0 0 0 2z" />
                        </svg>
                        ....
                    </p>
                </div>
            </div>
            <ul class="nav flex-column" id="nav">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="collapse" href="#collapseExample" role="button">系统管理</a>
                    <div class="collapse" id="collapseExample">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item bg-primary"><a href="/EditPossword/Index?ID=@ps.ID">修改密码</a></li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="collapse" href="#collapseExample" role="button">参数管理</a>
                    <div class="collapse" id="collapseExample">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item bg-primary"><a href="/Prize/Index">奖金管理</a></li>
                            <li class="list-group-item bg-primary"><a href="/Subsidy/Index">津贴管理</a></li>
                            <li class="list-group-item bg-primary"><a href="/Departments/Index">部门管理</a></li>
                            <li class="list-group-item bg-primary"><a href="/AttendanceSet/Index">考勤项管理</a></li>
                            <li class="list-group-item bg-primary"><a href="/Shop/Index">店铺管理</a></li>
                            <li class="list-group-item bg-primary"><a href="/Rank/Index">员工级别管理</a></li>
                        </ul>
                    </div>
                </li>

                <li class="nav-item">
                    <a class="nav-link" data-toggle="collapse" href="#collapseExample1" role="button">员工管理</a>
                    <div class="collapse" id="collapseExample1">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item bg-primary"><a href="/Personnel/Index">员工信息管理</a></li>
                            <li class="list-group-item bg-primary"><a href="/Role/Index">角色管理</a></li>
                            <li class="list-group-item bg-primary"><a href="#">权限管理</a></li>
                            <li class="list-group-item bg-primary"><a href="/Subsidynotes/Index">员工补贴记录</a></li>
                            <li class="list-group-item bg-primary"><a href="/GetPrize/Index">员工奖项记录</a></li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="collapse" href="#collapseExample2" role="button">员工考勤</a>
                    <div class="collapse" id="collapseExample2">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item bg-primary"><a href="/Attendance/Index">考勤记录</a></li>
                            <li class="list-group-item bg-primary">
                                @Html.ActionLink("打卡", "Index", "Attendances", new { PersonnelID = ps.ID }, new { @class = "" })
                                @*<a href="/Attendances/Index">打卡</a>*@
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="collapse" href="#collapseExample3" role="button">工资管理</a>
                    <div class="collapse" id="collapseExample3">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item bg-primary"><a href="/Produces/Index">生成工资表</a></li>
                            <li class="list-group-item bg-primary"><a href="/SelMoney/Index">查询工资</a></li>
                            <li class="list-group-item bg-primary"><a href="/Derive/Index">导出工资表</a></li>
                        </ul>
                    </div>
                </li>
                @*<li class="nav-item">
            <a class="nav-link" data-toggle="collapse" href="#collapseExample4" role="button">

                成绩管理

            </a>
            <div class="collapse" id="collapseExample4">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item bg-primary"><a href="#">成绩查询</a></li>
                    <li class="list-group-item bg-primary"><a href="#">成绩录入</a></li>
                </ul>
            </div>
        </li>*@
            </ul>
        </div>
        <div class="col-10">
            <section id="main">
                @RenderBody()
            </section>

        </div>

        <hr />

    </div>
    <div class="text-center">
        <footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 应用程序</p>
        </footer>
    </div>
    <script>
        $(".nav-link").bind("click", function () {
            $(this).next().toggle(".show");
        });
    </script>

    @RenderSection("scripts", required: false)


</body>
</html>